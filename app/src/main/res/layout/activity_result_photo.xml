<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultPhotoActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/baseline_arrow_back_24" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="15dp"
                    android:layout_weight="2"

                    android:background="#00FFFBFB"
                    android:text="Отправить"

                    android:textSize="15dp" />
            </LinearLayout>

            <ImageView

                android:id="@+id/imageView_result"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"

                android:layout_weight="1"
                android:src="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:width="1dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Размер загрязнения"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp">

                <ImageView
                    android:id="@+id/mini"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner"
                    android:src="@drawable/eerr" />

                <ImageView
                    android:id="@+id/sr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"

                    android:layout_weight="1"
                    android:src="@drawable/eerr2" />

                <ImageView
                    android:id="@+id/big"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"

                    android:layout_weight="1"
                    android:src="@drawable/eerr3" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:width="1dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Выбери тип загрязнения"
                android:textColor="@color/black"
                android:textSize="22dp" />
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:id="@+id/water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/water2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/water" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Водоем"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shestr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shestr2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/shestr" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Металл"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/batle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/batle2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/batle" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Пластик"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/block2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/block" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Строй-материалы"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/home" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Улица"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wheel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/wheel2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/wheel" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Шины"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:width="1dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Напиши подробнее об этом"
                android:textColor="@color/black"
                android:textSize="22dp"
                />

            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="30dp"
                android:width="1dp"
                android:maxLines="3" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>